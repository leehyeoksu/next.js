* text=auto

# Normalize to LF in repo
*.ts  text eol=lf
*.tsx text eol=lf
*.js  text eol=lf
*.jsx text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf
*.json text eol=lf
*.css text eol=lf
*.md  text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.py  text eol=lf
*.sh  text eol=lf
*.svg text eol=lf

# Keep Windows scripts with CRLF
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
