{
  "services": [
    {
      "name": "next",
      "command": "next dev",
      "cwd": ".",
      "env": { "PORT": "3000" },
      "enabled": true
    },
    {
      "name": "api",
      "command": "python -m uvicorn backend.main:app --reload --host 127.0.0.1 --port 8000",
      "cwd": ".",
      "env": { "PYTHONUNBUFFERED": "1" },
      "enabled": true,
      "runInWsl": true,
      "wslDistro": "Ubuntu",
      "venvLinuxPath": "/mnt/c/Users/User/myapp/backend/.venv-linux"
    },
    {
      "name": "celery",
      "command": "celery -A backend.celery.tasks worker -l info",
      "cwd": ".",
      "env": {
        "CELERY_BROKER_URL": "redis://localhost:6379/0",
        "CELERY_RESULT_BACKEND": "redis://localhost:6379/0",
        "LLM_PROVIDER": "ollama",
        "OLLAMA_BASE_URL": "http://127.0.0.1:11434",
        "OLLAMA_MODEL": "llama3.2:3b"
      },
      "enabled": true,
      "runInWsl": true,
      "wslDistro": "Ubuntu",
      "venvLinuxPath": "/mnt/c/Users/User/myapp/backend/.venv-linux"
    },
    {
      "name": "bridge",
      "command": "uvicorn backend.celery.api:api --host 0.0.0.0 --port 8001",
      "cwd": ".",
      "env": { "PYTHONUNBUFFERED": "1" },
      "enabled": true,
      "runInWsl": true,
      "wslDistro": "Ubuntu",
      "venvLinuxPath": "/mnt/c/Users/User/myapp/backend/.venv-linux"
    }
  ]
}
